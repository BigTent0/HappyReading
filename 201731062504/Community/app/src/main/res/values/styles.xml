<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="user_details_header">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:radius">20dp</item>
    </style>
    <style name="TextStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_red_border</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>
    <style name="display">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/shape_radius</item>
    </style>
    <style name="username">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="white">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="bookbox">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/shape_bookbox</item>
    </style>
</resources>
